      padding: 20px 25px;
      border-radius: 10px;
      width: 100%;
      max-width: 500px;
      position: relative;
      max-height: 80vh;
      overflow-y: auto;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .close {
      position: absolute;
      top: 10px;
      right: 15px;
      font-size: 24px;
      font-weight: bold;
      color: #333;
      cursor: pointer;
    }

    #noticeForm label,
    .editForm label {
