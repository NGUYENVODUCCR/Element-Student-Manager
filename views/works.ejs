      margin-bottom: 12px;
      font-weight: 500;
    }

    #noticeForm input,
    #noticeForm textarea,
    .editForm input,
    .editForm textarea {
      width: 100%;
      margin-top: 6px;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 14px;
      background-color: #fdfdfd;
    }

    #noticeForm textarea,
    .editForm textarea {
      resize: vertical;
      min-height: 80px;
    }

    #noticeForm button[type="submit"],
    .editForm button[type="submit"] {
